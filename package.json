{
  "name": "uno-material-ui",
  "version": "1.7.1",
  "description": "Components and extensions for Material UI",
  "main": "dist/index.js",
  "scripts": {
    "build:docs": "parcel build ./srcdocs/index.html --no-source-maps --public-url /uno-material-ui/ -d ./docs",
    "start": "parcel ./srcdocs/index.html --no-source-maps --port 8080 --open -d ./docs",
    "test": "jest",
    "build": "tsc",
    "lint": "tslint src/**/*.ts src/**/*.tsx",
    "lint:fix": "tslint src/**/*.ts src/**/*.tsx --fix"
  },
  "jest": {
    "automock": false,
    "moduleFileExtensions": [
      "tsx",
      "ts",
      "js"
    ],
    "testMatch": [
      "<rootDir>/test/**/*.spec.tsx"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "preset": "ts-jest",
    "testEnvironment": "node",
    "setupFiles": [
      "<rootDir>/test/setupTest.ts"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/unosquare/uno-material-ui.git"
  },
  "keywords": [
    "material-ui",
    "react",
    "hooks",
    "components"
  ],
  "author": "Unosquare",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/unosquare/uno-material-ui/issues"
  },
  "homepage": "https://github.com/unosquare/uno-material-ui#readme",
  "devDependencies": {
    "@types/enzyme": "^3.10.3",
    "@types/jest": "^24.0.23",
    "@types/react": "16.9.15",
    "@types/react-dom": "16.9.4",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.15.1",
    "jest": "^24.9.0",
    "parcel-bundler": "^1.12.4",
    "parcel-plugin-clean-easy": "^1.0.2",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-highlight": "^0.12.0",
    "react-router-dom": "^5.1.2",
    "react-router-hash-link": "^1.2.2",
    "ts-jest": "^24.2.0",
    "tslint": "^5.20.1",
    "tslint-react": "^4.1.0",
    "typescript": "^3.7.3"
  },
  "dependencies": {
    "@material-ui/core": "^4.7.1",
    "@material-ui/icons": "^4.5.1",
    "react-form-validator-core": "^0.6.4",
    "uno-react": "^0.10.9"
  },
  "peerDependencies": {
    "react": "^16.12.0",
    "react-dom": "^16.12.0"
  },
  "files": [
    "dist",
    "src"
  ],
  "parcelCleanPaths": [
    "docs/*.*"
  ]
}
